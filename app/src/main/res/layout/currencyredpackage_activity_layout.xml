<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_grey_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/_3d3d3d_color">
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_15"
            android:text="取消"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/white"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发约会币红包"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_marginRight="@dimen/dimen_12"
        android:layout_marginTop="@dimen/dimen_15"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingRight="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_15"
        android:paddingBottom="@dimen/dimen_15"
        android:background="@drawable/white_bg_shape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="约会币"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/dimen_12"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:numeric="integer"
            android:hint="0"
            android:gravity="right"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_describe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_84"
        android:background="@drawable/white_bg_shape"
        android:layout_marginTop="@dimen/dimen_18"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_marginRight="@dimen/dimen_12"
        android:maxLength="25"
        android:hint="小小意思,拿去浪吧"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_15"
        android:gravity="top"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_size_35"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/currency_text_logo"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_30"
            android:layout_marginLeft="@dimen/dp_size_7"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dimen_70">
        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果对方24小时没有领取红包,面具币将退回到你的钱包"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999999"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/tv_sendRedPackage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_bt_shape_bg"
            android:layout_above="@+id/tv_tag"
            android:text="塞币进红包"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_15"
            android:paddingBottom="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"/>
    </RelativeLayout>

</LinearLayout>
