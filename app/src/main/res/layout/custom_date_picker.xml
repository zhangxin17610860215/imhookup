<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/text_theme_color"
            android:textSize="@dimen/text_size_15"
            android:padding="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生日"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/text_theme_color"
            android:textSize="@dimen/text_size_15"
            android:padding="@dimen/dp_10"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_200"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_10">
        <com.yuanqi.hangzhou.imhookup.view.DatePickerView
            android:id="@+id/year_pv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <com.yuanqi.hangzhou.imhookup.view.DatePickerView
            android:id="@+id/month_pv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.yuanqi.hangzhou.imhookup.view.DatePickerView
            android:id="@+id/day_pv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.yuanqi.hangzhou.imhookup.view.DatePickerView
            android:id="@+id/hour_pv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.yuanqi.hangzhou.imhookup.view.DatePickerView
            android:id="@+id/minute_pv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
