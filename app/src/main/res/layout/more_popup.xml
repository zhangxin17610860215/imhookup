<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_bg_shape"
    android:paddingLeft="@dimen/dimen_5"
    android:paddingRight="@dimen/dimen_5">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_more_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_more_popup_Collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:paddingTop="@dimen/dimen_10"
            android:paddingLeft="@dimen/dimen_30"
            android:paddingRight="@dimen/dimen_30"
            android:paddingBottom="@dimen/dimen_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_999999" />

        <TextView
            android:id="@+id/tv_more_popup_PullBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拉黑"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:paddingTop="@dimen/dimen_10"
            android:paddingLeft="@dimen/dimen_30"
            android:paddingRight="@dimen/dimen_30"
            android:paddingBottom="@dimen/dimen_10"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_more_popup_Report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="匿名举报"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_12"
        android:paddingTop="@dimen/dimen_10"
        android:paddingLeft="@dimen/dimen_30"
        android:paddingRight="@dimen/dimen_30"
        android:paddingBottom="@dimen/dimen_10"/>

</LinearLayout>
