<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/nim_toobar_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你是..."
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_30"
        android:layout_marginLeft="@dimen/dimen_15"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="@dimen/dimen_100">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/male_yes"/>
            <TextView
                android:id="@+id/tv_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/color_7265F6"
                android:textSize="@dimen/text_size_15"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/img_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/female_no"/>
            <TextView
                android:id="@+id/tv_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_Determine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/white"
        android:background="@drawable/circular_bt_shape_bg"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_100"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_gravity="center"/>
</LinearLayout>
