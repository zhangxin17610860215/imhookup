<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_20"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingRight="@dimen/dimen_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/img_editingmaterials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/editingmaterials_logo"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/dimen_10"
            android:paddingLeft="@dimen/dimen_10"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_18"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_header"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@mipmap/default_head_logo"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_20">
                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地点"
                    android:textSize="@dimen/text_size_11"
                    android:textColor="@color/color_gray_999999"
                    android:drawableLeft="@mipmap/dian_logo"
                    android:drawablePadding="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_15"/>
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星座年龄"
                    android:textSize="@dimen/text_size_11"
                    android:textColor="@color/color_gray_999999"
                    android:drawableLeft="@mipmap/dian_logo"
                    android:drawablePadding="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_15"/>
                <TextView
                    android:id="@+id/tv_Occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职业"
                    android:textSize="@dimen/text_size_11"
                    android:textColor="@color/color_gray_999999"
                    android:drawableLeft="@mipmap/dian_logo"
                    android:drawablePadding="@dimen/dimen_5"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_adoptAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="她通过系统发放的验证码进入公园"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/color_gray_999999"
                android:layout_marginTop="@dimen/dimen_10"
                android:drawableLeft="@mipmap/duigou_logo"
                android:drawablePadding="@dimen/dimen_5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@mipmap/me_bg_logo"
                android:layout_marginTop="@dimen/dimen_40"
                android:paddingTop="@dimen/dimen_15"
                android:paddingLeft="@dimen/dimen_20">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="约会公园VIP"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/white"
                    android:drawableLeft="@mipmap/vip_huangguan_logo"
                    android:drawablePadding="@dimen/dimen_5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无限制聊天 · vip专属筛选 · 查看私密照……"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/text2_theme_color"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_5"/>
                <TextView
                    android:id="@+id/tv_addVIP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即加入"
                    android:textColor="@color/text_theme_color"
                    android:textSize="@dimen/text_size_10"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:background="@drawable/shape_circularline_from"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="@dimen/dimen_5"
                    android:paddingBottom="@dimen/dimen_5"
                    android:gravity="center"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fenli_logo"
                android:layout_marginTop="25dp"/>
            <TextView
                android:id="@+id/tv_Authentication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="真人认证"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12"
                android:drawableRight="@mipmap/right_jiantou_logo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_grey_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="钱包"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingBottom="@dimen/dimen_12"/>
                <TextView
                    android:id="@+id/tv_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00元,99约会币"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/color_999999"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingBottom="@dimen/dimen_12"
                    android:drawableRight="@mipmap/right_jiantou_logo"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_grey_bg"/>
            <TextView
                android:id="@+id/tv_PrivacySetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="隐私与连麦设置"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12"
                android:drawableRight="@mipmap/right_jiantou_logo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_grey_bg"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fenli_logo"
                android:layout_marginTop="@dimen/dimen_20"/>
            <TextView
                android:id="@+id/tv_dynamic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的动态"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12"
                android:drawableRight="@mipmap/right_jiantou_logo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_grey_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的相册"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/black"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingBottom="@dimen/dimen_12"/>
                <TextView
                    android:id="@+id/tv_myAlbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传照片"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text_theme_color"
                    android:layout_alignParentRight="true"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingBottom="@dimen/dimen_12"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/ll_noData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="上传我的第一张照片"
                        android:textSize="@dimen/text_size_18"
                        android:textColor="@color/color_gray_666666"
                        android:gravity="center"
                        android:paddingTop="@dimen/dimen_30"
                        android:paddingBottom="@dimen/dp_10"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="有照片才能吸引女士哦"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_10"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dimen_30"/>
                </LinearLayout>
            </RelativeLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fenli_logo"
                android:layout_marginTop="@dimen/dimen_20"/>
            <TextView
                android:id="@+id/tv_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的评价"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12"
                android:drawableRight="@mipmap/right_jiantou_logo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_grey_bg"/>
            <TextView
                android:id="@+id/tv_myLike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我喜欢的"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12"
                android:drawableRight="@mipmap/right_jiantou_logo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_grey_bg"/>
            <TextView
                android:id="@+id/tv_Blacklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="黑名单"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12"
                android:drawableRight="@mipmap/right_jiantou_logo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_grey_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="历史访客"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_seeNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="有2个人看过你"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/color_gray_999999"
                    android:layout_marginLeft="85dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阅后即焚"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_BurnDownNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已有0个人焚毁了你的照片"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/color_gray_999999"
                    android:layout_marginLeft="85dp"/>
                <TextView
                    android:id="@+id/tv_recovery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一键恢复"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/text_theme_color"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_grey_bg"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/fenli_logo"
                android:layout_marginTop="@dimen/dimen_40"/>
            <TextView
                android:id="@+id/tv_Setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12"
                android:drawableRight="@mipmap/right_jiantou_logo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_grey_bg"/>
            <TextView
                android:id="@+id/tv_Share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12"
                android:drawableRight="@mipmap/right_jiantou_logo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_grey_bg"/>
            <TextView
                android:id="@+id/tv_Help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="客服帮助"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/black"
                android:paddingTop="@dimen/dimen_12"
                android:paddingBottom="@dimen/dimen_12"
                android:drawableRight="@mipmap/right_jiantou_logo"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/activity_grey_bg"
                android:layout_marginBottom="@dimen/dimen_50"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
