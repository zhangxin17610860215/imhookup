<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="43dp"
        android:background="@mipmap/fillet"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/dimen_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="注册后将不能修改性别,确定吗?"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15"
            android:layout_marginTop="@dimen/dimen_100"/>
        <TextView
            android:id="@+id/tv_Determine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_bt_shape_bg"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_70"
            android:text="确定"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

    <ImageView
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@mipmap/caution_logo"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/close_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_below="@+id/ll_tag"/>

</RelativeLayout>
