<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">
        <ImageView
            android:id="@+id/img_header"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/default_home_head"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/img_GenderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gender_nv_logo"
            android:layout_alignRight="@+id/img_header"
            android:layout_alignBottom="@+id/img_header"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12"
            android:layout_toRightOf="@+id/img_header"
            android:drawableRight="@mipmap/nvshen_logo"
            android:drawablePadding="@dimen/dimen_5"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mess_logo"
            android:layout_alignBottom="@+id/img_header"
            android:layout_toRightOf="@+id/img_header"/>

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/more_logo"
            android:paddingTop="@dimen/dimen_5"
            android:paddingLeft="@dimen/dimen_10"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容内容内容内容内容内容内容内容内容内容内容"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginLeft="@dimen/dimen_40"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_30"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="35dp">
        <TextView
            android:id="@+id/tv_Fabulous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_size_12"
            android:drawableLeft="@mipmap/dianzan_logo"
            android:drawablePadding="@dimen/dimen_5"/>
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_size_12"
            android:drawableLeft="@mipmap/pinglun_logo"
            android:drawablePadding="@dimen/dimen_5"
            android:layout_toRightOf="@+id/tv_Fabulous"
            android:layout_marginLeft="@dimen/my_item_height_45"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-4-27"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_gray_999999"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/activity_grey_bg"
        android:layout_marginTop="@dimen/dimen_12"
        android:layout_marginLeft="35dp"/>

</LinearLayout>
