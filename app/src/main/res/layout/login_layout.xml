<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toobar_layout"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="@dimen/text_size_30"
        android:textColor="@color/black"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingBottom="@dimen/dimen_30"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_15"
        android:layout_marginLeft="@dimen/dimen_30"/>

    <EditText
        android:id="@+id/et_Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:padding="@dimen/dimen_15"
        android:background="@drawable/edittext_bg_shape_bg"
        android:hint="请输入账号"
        android:textColorHint="@color/edit_hint_color"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_15"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15" />
        <TextView
            android:id="@+id/tv_forgetPsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="忘记密码"
            android:textColor="@color/text_theme_color"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:padding="@dimen/dimen_15"
        android:background="@drawable/edittext_bg_shape_bg"
        android:hint="请输入密码"
        android:textColorHint="@color/edit_hint_color"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_15"/>


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_60"
        android:background="@drawable/circular_bt_shape_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_120"
            android:text="其他登录方式"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/weixinlogo"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="center"
                android:text="微信"
                android:textColor="@color/color_gray_999999"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/tv_QQ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/qqlogo"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/color_gray_999999"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/tv_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/weibologo"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="center"
                android:text="微博"
                android:textColor="@color/color_gray_999999"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
