<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/toobar_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="认证中心"
        android:textSize="@dimen/text_size_30"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/dimen_15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_RealPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真人认证"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_theme_color"
            android:paddingLeft="25dp"
            android:paddingTop="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_18"
            android:drawableBottom="@mipmap/xiabiao_logo"
            android:drawablePadding="4dp"/>
        <TextView
            android:id="@+id/tv_goddess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女神认证"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/dimen_18"
            android:paddingTop="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_18"
            android:drawableBottom="@drawable/line_not_selected"
            android:drawablePadding="4dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_30">
        <ImageView
            android:id="@+id/img_RealPerson_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/realperson_img_bg"/>
        <ImageView
            android:id="@+id/img_authentication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/realperson_img_logo"
            android:layout_alignBottom="@+id/img_RealPerson_bg"
            android:layout_alignRight="@+id/img_RealPerson_bg"
            android:layout_marginRight="@dimen/dimen_5"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="认证特权"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color_gray_999999"
        android:layout_marginLeft="@dimen/dp_size_15"
        android:layout_marginTop="@dimen/dimen_30"
        android:drawableBottom="@mipmap/fenli_logo"
        android:drawablePadding="@dimen/dimen_5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="免费发布广播"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/black"
        android:drawableLeft="@mipmap/dian_logo"
        android:drawablePadding="@dimen/dimen_5"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="评论男士广播"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/black"
        android:drawableLeft="@mipmap/dian_logo"
        android:drawablePadding="@dimen/dimen_5"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="私聊男士"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/black"
        android:drawableLeft="@mipmap/dian_logo"
        android:drawablePadding="@dimen/dimen_5"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_Authentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_bt_shape_bg"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_60"
        android:text="立即认证"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        android:gravity="center"/>

</LinearLayout>
