<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_grey_bg"
    android:orientation="vertical">

    <include layout="@layout/nim_toobar_layout"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="@dimen/text_size_30"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/dimen_15"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_10">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_size_15"
            android:paddingRight="@dimen/dp_size_15"
            android:background="@color/white"
            android:paddingTop="@dimen/dp_size_10"
            android:paddingBottom="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15"/>
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_70"
                android:background="@color/white"
                android:numeric="integer"
                android:hint="请输入手机号"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black"
                android:textColorHint="@color/edit_hint_color"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/activity_grey_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_size_15"
            android:paddingRight="@dimen/dp_size_15"
            android:background="@color/white"
            android:paddingTop="@dimen/dp_size_10"
            android:paddingBottom="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15"/>
            <TextView
                android:id="@+id/tv_send_vfCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证码"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/theme_color"
                android:layout_alignParentRight="true"/>
            <EditText
                android:id="@+id/et_vfCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_70"
                android:background="@color/white"
                android:hint="请输入验证码"
                android:numeric="integer"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black"
                android:textColorHint="@color/edit_hint_color"
                android:layout_toLeftOf="@+id/tv_send_vfCode"
                android:layout_marginRight="@dimen/dp_10"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/activity_grey_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_size_15"
            android:paddingRight="@dimen/dp_size_15"
            android:background="@color/white"
            android:paddingTop="@dimen/dp_size_10"
            android:paddingBottom="@dimen/dp_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置密码"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15"/>
            <EditText
                android:id="@+id/et_setPsw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_70"
                android:inputType="textPassword"
                android:background="@color/white"
                android:hint="请设置登录密码"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black"
                android:textColorHint="@color/edit_hint_color"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/activity_grey_bg"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_bt_shape_bg"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="下一步"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/white"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击进入表示你已经阅读并同意"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/dp_10"/>
        <TextView
            android:id="@+id/tv_Agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/theme_color"
            android:layout_marginRight="@dimen/dp_10"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_40">
            <ImageView
                android:id="@+id/img_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/weixin_hui_logo"
                android:layout_gravity="center"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qq_hui_logo"
                android:paddingLeft="@dimen/dp_10"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他注册方式"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_gray_666666"
            android:layout_above="@+id/ll_login"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>
