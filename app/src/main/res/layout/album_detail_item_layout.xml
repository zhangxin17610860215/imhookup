<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mRl"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tv_RedEnvelopePhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="红包照片"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"
        android:drawableLeft="@mipmap/unselected_logo"
        android:drawablePadding="@dimen/dp_10"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/tv_BurnAfterReading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="阅后即焚(查看2秒后焚毁)"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/black"
        android:drawableLeft="@mipmap/unselected_logo"
        android:drawablePadding="@dimen/dp_10"
        android:layout_above="@+id/tv_RedEnvelopePhotos"/>

    <ImageView
        android:id="@+id/img_album_detail_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_above="@+id/tv_BurnAfterReading"/>

    <LinearLayout
        android:id="@+id/ll_burnedDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fenhui_logo"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="照片已焚毁"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_gray_666666"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_addTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(会员可延长查看时间达6秒)"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_999999"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_goVIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_bt_shape_bg"
            android:text="马上升级会员"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20"/>
    </LinearLayout>

</RelativeLayout>
